<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reuniones"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UsuarioIniciado">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="125dp"
                                android:layout_height="98dp"
                                app:srcCompat="@drawable/reuniones" />

                            <Button
                                android:id="@+id/button3"
                                android:layout_width="235dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:onClick="irReuniones"
                                android:text="@string/btn_irreu" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </TableRow>

            </TableLayout>

            <TableLayout
                android:id="@+id/tableLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_width="125dp"
                                android:layout_height="98dp"
                                app:srcCompat="@drawable/proyectos" />

                            <Button
                                android:id="@+id/button4"
                                android:layout_width="235dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:onClick="irproyectos"
                                android:text="@string/btn_irproy" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </TableRow>

            </TableLayout>

            <TableLayout
                android:id="@+id/tableLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_width="125dp"
                                android:layout_height="98dp"
                                app:srcCompat="@drawable/entrevista" />

                            <Button
                                android:id="@+id/button5"
                                android:layout_width="233dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:onClick="irEntrevistas"
                                android:text="@string/btn_irentre" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </TableRow>

            </TableLayout>

            <TableLayout
                android:id="@+id/tableLayout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView6"
                                android:layout_width="125dp"
                                android:layout_height="98dp"
                                app:srcCompat="@drawable/conferencia" />

                            <Button
                                android:id="@+id/button6"
                                android:layout_width="235dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:onClick="irConferencias"
                                android:text="@string/btn_irconfe" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </TableRow>

            </TableLayout>

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView7"
                                android:layout_width="125dp"
                                android:layout_height="98dp"
                                app:srcCompat="@drawable/investigavion" />

                            <Button
                                android:id="@+id/ingresar"
                                android:layout_width="235dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:onClick="irInvestigacion"
                                android:text="@string/btn_irinves" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </TableRow>

            </TableLayout>

            <Button
                android:id="@+id/btn_cerrarsecion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/rojo"
                android:gravity="center_horizontal|center_vertical"
                android:onClick="FinSecion"
                android:text="@string/btn_finSecion" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>